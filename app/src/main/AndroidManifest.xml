<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samiu.wangank">

    <application
        android:name="com.samiu.wangank.base.AppApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo_main"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <!-- 屏幕适配相关参数 -->
        <meta-data
            android:name="design_width_in_dp"
            android:value="375" />

        <activity
            android:name="com.samiu.wangank.ui.base.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.samiu.wangank.ui.base.MainActivity" />
        <activity android:name="com.samiu.wangank.ui.base.BrowserActivity" />
        <activity android:name="com.samiu.wangank.ui.base.WanLoginActivity" />
        <activity android:name="com.samiu.wangank.ui.base.WanPersonalActivity" />
        <activity
            android:name="com.samiu.wangank.ui.base.SystemDisplayActivity"
            android:theme="@style/SearchTheme" />
        <activity
            android:name="com.samiu.wangank.ui.base.SearchActivity"
            android:theme="@style/SearchTheme" />
        <activity
            android:name="com.samiu.wangank.ui.base.MineActivity"
            android:theme="@style/SearchTheme" />
    </application>

</manifest>